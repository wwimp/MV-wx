.grids {
  background-color: #fff;
  display: flex;
  flex-wrap: wrap;
  border-top: 1rpx solid #eee;
  border-left: 1rpx solid #eee;
}

.grids .item {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 33.3333333333333%;
  height: 250rpx;
  border-bottom: 1rpx solid #eee;
  border-right: 1rpx solid #eee;
  box-sizing: border-box;
}

.grids .item image {
  width: 70rpx;
  height: 70rpx;
}

.grids .item text {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #888;
}

.links {
  margin: 10rpx 0;
  padding: 50rpx;
  display: flex;
  justify-content: space-between;
  background-color: #fff;
}

.links image {
  width: 300rpx;
  height: 180rpx;
}