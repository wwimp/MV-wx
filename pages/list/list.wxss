page {
  background-color: #eee;
}

.container {
  display: flex;
  flex-direction: column;
}

.search {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #fff;
  margin: 10rpx 20rpx;
  padding: 10rpx 15rpx;
  font-size: 30rpx;
  box-sizing: border-box;
  border-radius: 10rpx;
}

.search input {
  flex: 1;
}

.list {
  display: flex;
  background-color: #fff;
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.list image {
  width: 180rpx;
  height: 180rpx;
}

.list .desc {
  flex: 1;
  display: block;
  margin: 0 20rpx;
  font-size: 26rpx;
}

.list .desc text {
  display: block;
}

.list .desc text:nth-child(1) {
  font-size: 28rpx;
  font-weight: 550;
}

.list .score {
  height: 30rpx;
  line-height: 30rpx;
  background-color: #e92525;
  text-align: center;
  font-size: 24rpx;
  color: #fff;
  border-radius: 50rpx;
  padding: 0 10rpx;
}

.loadmore {
  color: #888;
  font-size: 30rpx;
  line-height: 100rpx;
  text-align: center;
}

.loadmore.loading::before {
  content: '';
  width: 40rpx;
  height: 40rpx;
  margin-top: -10rpx;
  margin-right: 10rpx;
  display: inline-block;
  vertical-align: middle;
  animation: loading 1s steps(12) infinite;
  background: transparent url(data:image/svg+xml;base64,) no-repeat;
  background-size: 100%
}

@keyframes loading {
  from {
    transform: rotate(0deg)
  }

  to {
    transform: rotate(-360deg)
  }
}